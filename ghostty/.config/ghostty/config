theme = /Applications/Ghostty.app/Contents/Resources/ghostty/themes/tokyonight
background-opacity = 0.8
background-blur = true

# left padding to 2 and the right padding to 4
# window-padding-x = 2,4
window-padding-x = 10

# title bar
macos-titlebar-style = hidden

# font size in pts
font-family = "JetBrains Mono"
font-size = 17
# font-family = "Sarasa Term SC Nerd" # chinese 2:1 nerd font
#                                     # https://github.com/laishulu/Sarasa-Term-SC-Nerd

# cursor
cursor-color = #47FF9C
# cursor-color = #26b0ff
cursor-style = underline
# cursor-style = bar
shell-integration-features = no-cursor


# ====== keybindings ======

# keybind = global:unconsumed:ctrl+shift+b>r=reload_config
keybind = ctrl+shift+b>r=reload_config

keybind = performable:ctrl+shift+c=copy_to_clipboard
keybind = performable:ctrl+shift+v=paste_from_clipboard

keybind = ctrl+shift+b>t=new_tab

# ====== quick terminal ======
# from https://github.com/fredrikaverpil/dotfiles/blob/main/ghostty.conf
keybind = global:cmd+`=toggle_quick_terminal

# 1.2.0+
quick-terminal-size = 40%
quick-terminal-position = right

# ====== custom shader (cursor) ======
# from the repo https://github.com/KroneCorylus/ghostty-shader-playground
