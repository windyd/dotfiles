{
  "$schema": "https://opencode.ai/config.json",
  // Theme configuration
  "theme": "system",
  "autoupdate": true,
  "plugin": [],
  // "plugin": [
  //   "oh-my-opencode@beta"
  // ],
  "permission": {
    "bash": {
      "*": "ask",
      "git *": "allow",
      "git commit *": "deny",
      "git push *": "deny",
      "grep *": "allow",
      "rm *": "ask"
    }
  },
  "agent": {
    "build": {
      "permission": {
        "bash": {
          "git commit *": "ask",
        }
      }
    },
    "explore": {
      "permission": {
        "external_directory": "ask",
        "bash": {
          "head": "allow",
          "find *": "allow",
          "find * -exec *": "ask",
          "find * -delete*": "ask"
        }
      }
    }
  },
  "provider": {
    "openai": {
      "name": "OpenAI",
      "options": {
        "reasoningEffort": "medium",
        "reasoningSummary": "auto",
        "textVerbosity": "medium",
        "include": [
          "reasoning.encrypted_content"
        ],
        "store": false
      }
    }
  }
}
